<!doctype html>
<html lang="fr">

<head>
  <meta charset="UTF-8">
  <meta name="viewport"
    content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Satisfy&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans&display=swap" rel="stylesheet">
  <script src="https://kit.fontawesome.com/d30d53ecea.js" crossorigin="anonymous"></script>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
  <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
    crossorigin="anonymous"></script>
  {% block stylesheet %}
  {% endblock %}
</head>

<body>
  <header class="p-3">
    <div class="container">
      <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
        <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-dark text-decoration-none">
          <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap">
            <use xlink:href="#bootstrap" />
          </svg>

        </a>

        <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
          <li><a href="{{ path('accueil') }}" class="nav-link px-3 link-dark fs-5">Accueil</a></li>
          {% if user %}
          <li><a href="{{ path('user.liste') }}" class="nav-link px-3 link-dark fs-5">Nos événements</a></li>
          {% else %}
          <li><a href="{{ path('events') }}" class="nav-link px-3 link-dark fs-5">Nos événements</a></li>
          {% endif %}
          <li><a href="{{ path('quiSommes') }}" class="nav-link px-3 link-dark fs-5">Qui sommes-nous ?</a></li>
          <li><a href="{{ path('dons') }}" class="nav-link px-3 link-dark fs-5">Dons</a></li>
          <li><a href="{{ path('contact') }}" class="nav-link px-3 link-dark fs-5">Contact</a></li>
          <li><a href="{{ path('user.login') }}" class="nav-link px-3 link-dark fs-5">Inscription / Connexion</a></li>
        </ul>

        <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3" role="search">
          <input type="search" class="form-control" placeholder="Recherche..." aria-label="Search">
        </form>

        <div class="dropdown text-end">
          <a href="#" class="d-block link-dark text-decoration-none dropdown-toggle" data-bs-toggle="dropdown"
            aria-expanded="false">
            <img src="{{ absolute(assets('assets/img/user.png')) }}" alt="" width="32" height="32"
              class="rounded-circle">
          </a>
          <ul class="dropdown-menu text-small">

            {% if user %}
            <li>
              <p class="dropdown-item text-dark disabled">Bonjour, {{ user.prenom }}</p>
            </li>
            {% else %}
            <li>
              <p class="dropdown-item text-dark disabled">Bonjour, Visiteur</p>
            </li>
            {% endif %}

            {% if user %}

            <li>
              <hr class="dropdown-divider">
            </li>
            <li>
              <a class="dropdown-item" href="{{ path('user.listEvent') }}">Mes événements</a>
            </li>
            <li>
              <a class="dropdown-item" href="{{ path('user.logout') }}">Se déconnecter</a>
            </li>

            {% else %}

            <li>
              <hr class="dropdown-divider">
            </li>
            <li>
              <a class="dropdown-item" href="{{ path('events') }}">Voir les événements</a>
            </li>
            <li>
              <a class="dropdown-item" href="{{ path('user.login') }}">Se connecter</a>
            </li>

            {% endif %}
          </ul>
        </div>
      </div>
    </div>
  </header>

  <main>

    {% if hasToast() %}

    {% for toast in renderToast() %}

    {{ toast | raw }}

    {% endfor %}

    {% endif %}

    {% block body %}

    {% endblock %}

  </main>

  <footer class="">
    <div class="bloc-footer container-fluid py-3">

      <div class="row px-5">
        <div class="col-6 col-md-2 mb-3">
          <h5>Liens du site</h5>
          <ul class="nav flex-column">
            <li class="nav-item mb-2"><a href="{{ path('accueil') }}" class="nav-link p-0 text-muted">Acceuil</a></li>
            {% if user %}
            <li class="nav-item mb-2"><a href="{{ path('user.liste') }}" class="nav-link p-0 text-muted">Nos événements</a></li>
            {% else %}
            <li class="nav-item mb-2"><a href="{{ path('events') }}" class="nav-link p-0 text-muted">Nos événements</a></li>
            {% endif %}
            <li class="nav-item mb-2"><a href="{{ path('quiSommes')}}" class="nav-link p-0 text-muted">Qui sommes-nous
                ?</a></li>
            <li class="nav-item mb-2"><a href="{{ path('dons') }}" class="nav-link p-0 text-muted">Dons</a></li>
            <li class="nav-item mb-2"><a href="{{ path('contact') }}" class="nav-link p-0 text-muted">Contact</a></li>
            <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">Mentions Légales</a></li>
          </ul>
        </div>

        <div class="col-6 col-md-2 mb-3">
          <h5>Horaires</h5>
          <ul class="nav flex-column">
            <li class="nav-item mb-2">Lundi 09:00-19:30</li>
            <li class="nav-item mb-2">Mardi 09:00-19:30</li>
            <li class="nav-item mb-2">Mercredi 09:00-19:30</li>
            <li class="nav-item mb-2">Jeudi 09:00-19:30</li>
            <li class="nav-item mb-2">Vendredi 09:00-19:30</li>
            <li class="nav-item mb-2">Samedi 09:00-19:30</li>
            <li class="nav-item mb-2">Dimanche 09:00-12:30</li>
          </ul>
        </div>

        <div class="col-6 col-md-2 mb-3">
          <h5>Nous contacter</h5>
          <ul class="nav flex-column">
            <li class="nav-item mb-2">57000 Metz</li>
            <li class="nav-item mb-2">14 Rue Mozart</li>
            <li class="nav-item mb-2">Tél. +33 07 25 13 12</li>
            <li class="nav-item mb-2">Fax. +33 07 25 13 12</li>
            <li class="nav-item mb-2">E-mail : mozart@epi.fr</li>
          </ul>
        </div>

        <div class="col-md-5 offset-md-1 mb-3">
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d10447.130077723144!2d6.1680357!3d49.1097719!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4794dc0600ab2253%3A0x5b6ac954f3be2ad3!2sEpicerie%20Mozart!5e0!3m2!1sfr!2sfr!4v1678187938277!5m2!1sfr!2sfr"
            width="100%" height="100%" style="border:0;" allowfullscreen="" loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
      </div>

    </div>
  </footer>
  {% block scripts %}

  {% endblock %}
</body>

</html>
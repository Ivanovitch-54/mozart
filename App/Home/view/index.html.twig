{% extends 'layout.html.twig' %}
{% block title %}
<title>Accueil</title>
{% endblock %}

{% block stylesheet %}
<link rel="stylesheet" href="{{ assets('assets/css/home.css') }}">
{% endblock %}
{% block body %}

<div class="index-top-bloc">

  <div class="container-fluid my-2">

    <div class="bloc1 row text-center d-flex justify-content-around">

      <div class="welcome-pic col-6 d-flex align-items-center justify-content-center rounded-4">
        <p class="welcome-text fs-2 rounded-pill bg-white px-4">Bienvenue à l'épicerie Mozart</p>
      </div>
      <div class="col-4 d-flex justify-content-around flex-column">
        <p class="bloc-actu fs-3 rounded-pill border bg-white align-self-center">Nos activités</p>
        <div class="link-cuisine fs-2 rounded-4 bg-white d-flex justify-content-center">
          <p class="align-self-end mb-3"><a href="{{ path('events') }}"
              class="text-activity text-white text-decoration-none">Atelier
              Cuisine</a></p>
        </div>
        <div class="link-coiffure fs-2 rounded-4 bg-white d-flex justify-content-center">
          <p class="align-self-end mb-3"><a href="{{ path('events') }}"
              class="text-activity text-white text-decoration-none">Atelier
              Coiffure</a></p>
        </div>
        <div class="link-doc fs-2 rounded-4 bg-white d-flex justify-content-center">
          <p class="align-self-end mb-3"><a href="{{ path('events') }}"
              class="text-activity text-white text-decoration-none">Rendez-vous
              médicaux</a></p>
        </div>
      </div>
    </div>
  </div>


  {# Ici commence la deuxième partie du site #}

  <div class="index-bottom-bloc my-5">

    <div class="container-fluid my-5">
      <div class="row text-center d-flex justify-content-around">
        <div class="bloc2 col-6 rounded-4">
          <div class="welcome-pic2 d-flex justify-content-center">
            <p class="welcome-text2 fs-4 rounded-pill bg-white py-2">Venez découvrir nos produits ainsi que nos
              activités
            </p>
          </div>
        </div>


        <div class="bloc-aside-sec col-4 d-flex justify-content-around align-items-center flex-column">
          <div class="bloc-actu fs-3 rounded-pill border bg-white align-self-center">Nos actualités</div>
          <div class="linkedin-link rounded-4 bg-white py-2"><a href="https://fr.linkedin.com/" target="_blank"
              class=" text-decoration-none text-dark">Suivez-nous sur Linkedin <i
                class="fa-brands fa-linkedin fa-2xl"></i></a></div>
          <div class="facebook-link rounded-4 bg-white py-2"><a href="https://www.facebook.com/epiceriesolidairemozart/"
              target="_blank" class=" text-decoration-none text-dark">Suivez-nous sur Facebook <i
                class="fa-brands fa-facebook fa-2xl"></i></a></div>
          <p class="bloc-actu fs-3 rounded-pill border bg-white align-self-center">Nos derniers ateliers</p>

          {# Ici commence le carousel #}
          <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner rounded-4">
              <div class="carousel-item active">
                <img src="/assets/img/gros-plan-cuisine-du-chef-dans-cuisine-du-restaurant.jpg" class="img-fluid"
                  alt="...">
              </div>
              <div class="carousel-item">
                <img src="/assets/img/gros-plan-fille-mere-preparer-pate.jpg" class="img-fluid" alt="...">
              </div>
              <div class="carousel-item">
                <img src="/assets/img/spaghetti-g65abc0b04_1920.jpg" class="img-fluid" alt="...">
              </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls"
              data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls"
              data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>


{% endblock %}




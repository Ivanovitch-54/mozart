{% extends 'layout.html.twig' %}

{% block stylesheet %}
<link rel="stylesheet" href="{{ assets('assets/css/home.css') }}" {% endblock %} {% block body %} <div
  class="index-top-bloc">


<div class="container-fluid my-2">

  <div class="bloc1 row text-center d-flex justify-content-around">

    <div class="welcome-pic col-6 d-flex align-items-center justify-content-center rounded-4">
      <p class="welcome-text fs-2 rounded-pill bg-white px-4">Bienvenue à l'épicerie Mozart</p>
    </div>


    <div class="col-4 d-flex justify-content-around flex-column ">
      <p class="bloc-actu fs-3 rounded-pill border bg-white py-1 align-self-center">Nos activités</p>
      <div class="link-cuisine fs-2 rounded-4 bg-white d-flex align-items-center justify-content-center">
        <p class="text-activity rounded-pill text-white mx-5r">Atelier cuisine</p>
      </div>
      <div class="link-coiffure fs-2 rounded-4 bg-white d-flex align-items-center justify-content-center">
        <p class="text-activity rounded-pill text-white mx-5r">Atelier Coiffure</p>
      </div>
      <div class="link-doc fs-2 rounded-4 bg-white d-flex align-items-center justify-content-center">
        <p class="text-activity rounded-pill text-white mx-5r">Rendez-vous
          médicaux</p>
      </div>
    </div>
  </div>
</div>


{# Ici commence la deuxième partie du site #}

<div class="index-bottom-bloc my-5">

  <div class="container-fluid my-5">
    <div class="row text-center d-flex justify-content-around">
      <div class="bloc2 col-6 rounded-4">
        <div class="welcome-pic2 d-flex justify-content-center">
          <p class="welcome-text2 fs-4 rounded-pill bg-white py-2">Venez découvrir nos produits ainsi que nos activités
          </p>
        </div>
      </div>


      <div class="bloc-aside-sec col-4 d-flex justify-content-around align-items-center flex-column">
        <div class="bloc-actu fs-3 rounded-pill border bg-white py-1">Nos actualités</div>
        <div class="linkedin-link rounded-4 bg-white py-2">Suivez-nous sur Linkedin <i
            class="fa-brands fa-linkedin fa-2xl"></i></div>
        <div class="facebook-link rounded-4 bg-white py-2">Suivez-nous sur Facebook <i
            class="fa-brands fa-facebook fa-2xl"></i></div>
        <p class="bloc-actu fs-3 rounded-pill border bg-white py-1">Nos derniers ateliers</p>

        {# Ici commence le carousel #}
        <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
          <div class="carousel-inner rounded-4">
            <div class="carousel-item active">
              <img src="/assets/img/gros-plan-cuisine-du-chef-dans-cuisine-du-restaurant.jpg"
                class="d-block h-100 w-100" alt="...">
            </div>
            <div class="carousel-item">
              <img src="/assets/img/gros-plan-fille-mere-preparer-pate.jpg" class="d-block h-100 w-100" alt="...">
            </div>
          </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls"
            data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls"
            data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
      </div>
    </div>

  </div>
</div>
</div>

{% endblock %}
{% extends 'layout.html.twig' %}
{% block title %}
<title>Contact</title>
{% endblock %}
{% block stylesheet %}
<link rel="stylesheet" href="{{ assets('/assets/css/home.css') }}" />
<link rel="stylesheet" href="{{ assets('/assets/css/contact.css') }}" />
{% endblock %}

{% block scripts %}
<script src="https://www.google.com/recaptcha/api.js" async defer></script>
{% endblock %}

{% block body %}
<h2 class="text-center mx-auto border rounded bg-white px-5 mb-3">Nous contacter</h2>

<div class="bloc container mb-5">
    <div class="row">
        <div class="col-sm-6">
            <form action="mailto:mozart@epi.fr" method="post" class="card p-4">

                <h3 class="text-center mb-3">Formulaire de contact</h3>

                <div class="input-group input-group-sm mb-3">
                    <span class="input-group-text" id="inputGroup-sizing-sm">E-mail</span>
                    <input type="email" name="role" class="form-control" aria-label="Sizing example input"
                        aria-describedby="inputGroup-sizing-sm">
                </div>

                <div class="input-group input-group-sm mb-3">
                    <span class="input-group-text" id="inputGroup-sizing-sm">Sujet</span>
                    <input type="text" name="role" class="form-control" aria-label="Sizing example input"
                        aria-describedby="inputGroup-sizing-sm">
                </div>

                <div class="input-group input-group-sm">
                    <span class="input-group-text" id="inputGroup-sizing-sm">Saisir votre message :</span>
                    <textarea class="form-control" name="description" id="floatingTextarea"></textarea>
                </div>

                {# CAPTCHA #}
                <div class="g-recaptcha align-self-center mt-3" data-sitekey="6LfNM_4kAAAAAGIXgFgCgSVpCwsZlB9PHw28zJdj"></div>

                <input type="submit" value="Envoyer" class="submit border border-warning rounded-4 bg-warning mt-3">
            </form>
        </div>

        <div class="col-sm-6">
            <iframe
                src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d10447.130077723144!2d6.1680357!3d49.1097719!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4794dc0600ab2253%3A0x5b6ac954f3be2ad3!2sEpicerie%20Mozart!5e0!3m2!1sfr!2sfr!4v1678187938277!5m2!1sfr!2sfr"
                width="100%" height="100%" style="border:0;" allowfullscreen="" loading="lazy"
                referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
    </div>


</div>
{% endblock %}
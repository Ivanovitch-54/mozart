{% extends "admin.layout.html.twig" %}
{% block title %}
<title>Admin - Ajouter un Ajouter un événement</title>
{% endblock %}
{% block stylesheet %}
<link rel="stylesheet" href="{{ absolute(assets('assets/css/addEvent.css')) }}">
{% endblock %}
{% block body %}

<div class="container my-5 text-center d-flex flex-column align-items-center">

    <h2 class="border rounded-4 bg-white">Ajouter un événement</h2>

    <form method="POST" action="" class="card p-4 my-5" style="max-width: 500px;" enctype="multipart/form-data">

        <div class="input-group input-group-sm mb-3">
            <span class="input-group-text" id="inputGroup-sizing-sm">Nom de l'événement</span>
            <input type="text" name="nom" class="form-control" aria-label="Sizing example input"
                aria-describedby="inputGroup-sizing-sm" placeholder="Saisir le nom de l'événement" pattern="[a-zA-Z]+">
        </div>

        <div class="input-group input-group-sm mb-3">
            <span class="input-group-text" id="inputGroup-sizing-sm">Description de l'événement</span>
            <textarea class="form-control" name="description" placeholder="Saisir la description de l'événement"
                id="floatingTextarea" pattern="[a-z,A-Z,0-9_ ]*$"></textarea>
        </div>

        <div class="input-group input-group-sm mb-3">
            <span class="input-group-text" id="inputGroup-sizing-sm">Intervenant de l'événement</span>
            <select name="intervenant" class="border border-grey form-select">

                <option value="" selected>Choisir un intervenant</option>

                {% for intervenant in intervenants %}

                <option value="{{ intervenant.id }}">{{ intervenant.nom }} {{ intervenant.prenom}} / {{ intervenant.role
                    }}</option>

                {% endfor %}

            </select>
        </div>

        <div class="input-group input-group-sm mb-3">
            <span class="input-group-text" id="inputGroup-sizing-sm">Début de l'événement</span>
            <input type="datetime-local" name="start_at" class="form-control" aria-label="Sizing example input"
                aria-describedby="inputGroup-sizing-sm">
        </div>

        <div class="input-group input-group-sm mb-3">
            <span class="input-group-text" id="inputGroup-sizing-sm">Fin de l'événement</span>
            <input type="datetime-local" name="endAt" class="form-control" aria-label="Sizing example input"
                aria-describedby="inputGroup-sizing-sm">
        </div>

        <div class="input-group input-group-sm mb-3">
            <span class="input-group-text" id="inputGroup-sizing-sm">Nombres de places de l'événement</span>
            <input type="number" name="nbr_places_dispo" class="form-control" aria-label="Sizing example input"
                aria-describedby="inputGroup-sizing-sm">
        </div>

        <input type="submit" value="Ajouter" class="border border-warning rounded-4 bg-warning">
    </form>

</div>

{% endblock %}
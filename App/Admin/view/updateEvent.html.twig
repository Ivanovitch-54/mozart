{% extends "admin.layout.html.twig" %}

{% block body %}

<form method="POST" action="" class="card p-4" style="max-width: 500px;" enctype="multipart/form-data">

    <div class="input-group input-group-sm mb-3">
        <span class="input-group-text" id="inputGroup-sizing-sm">Nom de l'événement</span>
        <input type="text" name="nom" class="form-control" aria-label="Sizing example input"
            aria-describedby="inputGroup-sizing-sm" value="{{ evenement.nom }}">
    </div>

    <div class="input-group input-group-sm mb-3">
        <span class="input-group-text" id="inputGroup-sizing-sm">Description de l'événement</span>
        <input type="text" name="description" class="form-control" aria-label="Sizing example input"
            aria-describedby="inputGroup-sizing-sm" value="{{ evenement.description }}">
    </div>

    <div class="input-group input-group-sm mb-3">
        <span class="input-group-text" id="inputGroup-sizing-sm">Début de l'événement</span>
        <input type="datetime-local" name="startAt" class="form-control" aria-label="Sizing example input"
            aria-describedby="inputGroup-sizing-sm" value="{{ evenement.startAt|date("d/m/Y\\ H:i", "Europe/Paris") }}">
    </div>

    <div class="input-group input-group-sm mb-3">
        <span class="input-group-text" id="inputGroup-sizing-sm">Fin de l'événement</span>
        <input type="datetime-local" name="endAt" class="form-control" aria-label="Sizing example input"
            aria-describedby="inputGroup-sizing-sm" value="{{ evenement.endAt|date("d/m/Y\\ H:i", "Europe/Paris") }}">
    </div>

    <div class="input-group input-group-sm mb-3">
        <span class="input-group-text" id="inputGroup-sizing-sm">Nombres de places de l'événement</span>
        <input type="number" name="nbr_places_dispo" class="form-control" aria-label="Sizing example input"
            aria-describedby="inputGroup-sizing-sm" value="{{ evenement.nbrPLacesDispo }}">
    </div>

    <input type="submit" value="Modifier l'événement">
</form>

{% endblock %}
{% extends 'layout.html.twig' %}

{% block stylesheet %}
<link rel="stylesheet" href="{{ assets('/assets/css/userForm.css') }}" />
{% endblock %}

{% block scripts %}
<script type="text/javascript" src="{{ assets('/assets/js/formSlider.js') }}"></script>
{% endblock %}

{% block body %}

        {# Formulaire inscription #}
        <form method="POST" class="p-4 formInscription" action="{{ path('user.change') }}">
            <div class="form-floating mb-3">
                <input type="text" class="form-control" name="nom" id="nom" placeholder="{{ user.name }}">
                <label for="nom">Nouveau Nom</label>
            </div>
            <div class="form-floating mb-3">
                <input type="text" class="form-control" name="prenom" id="prenom" placeholder="{{ user.prenom }}">
                <label for="prenom">Nouveau pr√©nom</label>
            </div>
            <div class="form-floating">
                <input type="password" class="form-control" name="mdp" id="floatingPassword" placeholder="Password">
                <label for="floatingPassword">Nouveau Mot de passe</label>
            </div>
            <div class="form-floating">
                <input type="password" class="form-control" name="mdp_confirm" id="floatingPasswordConfirm"
                    placeholder="Password">
                <label for="floatingPasswordConfirm">Confirmer le nouveau mot de passe</label>
            </div>
            <input type="submit" value="Changer vos informations de connexion">
        </form>
    </div>

{% endblock %}